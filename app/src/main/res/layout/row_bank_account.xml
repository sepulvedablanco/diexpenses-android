<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_bank_account_row_height">

    <ImageView
        android:id="@+id/row_bank_account_icon"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        style="@style/row_icon" />

    <TextView
        android:id="@+id/row_bank_account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text.bank_account_label_up"
        android:layout_toRightOf="@id/row_bank_account_icon"
        android:layout_toEndOf="@id/row_bank_account_icon"/>

    <TextView
        android:id="@+id/row_bank_account_accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text.bank_account_label_down"
        android:layout_alignBottom="@id/row_bank_account_icon"
        android:layout_toRightOf="@id/row_bank_account_icon"
        android:layout_toEndOf="@id/row_bank_account_icon"/>

</RelativeLayout>