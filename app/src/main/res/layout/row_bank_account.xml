<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_bank_account_row_height">

    <ImageView
        android:id="@+id/row_bank_account_icon"
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/image_space"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <TextView
        android:id="@+id/row_bank_account_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/bank_account_margin"
        android:layout_toRightOf="@id/row_bank_account_icon" />

    <TextView
        android:id="@+id/row_bank_account_accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bank_account_margin"
        android:layout_alignBottom="@id/row_bank_account_icon"
        android:layout_toRightOf="@id/row_bank_account_icon" />

</RelativeLayout>